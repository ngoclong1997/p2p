<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/default_padding_margin">

    <RelativeLayout
        android:layout_marginTop="@dimen/default_padding_margin"
        android:layout_marginBottom="@dimen/default_padding_margin"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content">
        <TextView
            style="@style/default_orange_small_text"
            android:textStyle="bold"
            android:id="@+id/transfer_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_below="@id/transfer_info"
            style="@style/default_black_tiny_text"
            android:textStyle="bold"
            android:id="@+id/transfer_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"/>
    </RelativeLayout>
</RelativeLayout>