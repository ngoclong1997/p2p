<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.p2p.activities.ReceiveQRCodeActivity">

    <RelativeLayout
        android:id="@+id/referlink_header"
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="@dimen/default_padding_margin"
            android:src="@drawable/ic_arrow_back_black_24dp" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@string/default_font"
            android:text="@string/referlink"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/default_text_medium"
            android:textStyle="bold" />

    </RelativeLayout>

    <ScrollView
        android:id="@+id/referlink_body"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/referlink_header"
        android:layout_marginStart="@dimen/default_padding_margin"
        android:layout_marginEnd="@dimen/default_padding_margin">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/app_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true">

                <ImageView
                    android:id="@+id/app_info_icon"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_logo" />

                <RelativeLayout
                    android:id="@+id/app_info_box"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="@dimen/default_padding_margin"
                    android:layout_toEndOf="@id/app_info_icon">

                    <TextView
                        android:id="@+id/app_info_name"
                        style="@style/default_black_small_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="@string/p2p_network" />

                    <TextView
                        android:id="@+id/app_info_version"
                        style="@style/default_orange_small_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/app_info_name"
                        android:layout_marginStart="5dp"
                        android:text="Version 1.1" />
                </RelativeLayout>

            </RelativeLayout>

            <android.support.v7.widget.CardView
                android:id="@+id/invitation_qr_code_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/app_info"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/default_padding_margin"
                android:background="@drawable/bg_white_bordered"
                android:orientation="horizontal"
                app:cardCornerRadius="5dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/default_padding_margin">

                    <RelativeLayout
                        android:id="@+id/invitation_text_box"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true">

                        <TextView
                            android:id="@+id/my_invitation"
                            style="@style/default_black_small_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/my_invitation_code" />

                        <TextView
                            android:id="@+id/my_invitation_code"
                            style="@style/default_orange_small_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginStart="5dp"
                            android:layout_toEndOf="@id/my_invitation"
                            android:text="longnn" />
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/referlink_action_buttons"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/invitation_text_box"
                        android:layout_marginTop="@dimen/bigger_padding_margin"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btn_copy_invitation_code"
                            style="@style/default_orange_tiny_text"
                            android:layout_width="0dp"
                            android:layout_height="35dp"
                            android:layout_marginEnd="@dimen/default_padding_margin"
                            android:layout_weight="1"
                            android:background="@drawable/button_orange_outlined_bordered"
                            android:text="@string/copy_invitation_code"
                            android:textAllCaps="false" />

                        <Button
                            android:id="@+id/btn_copy_url"
                            style="@style/default_orange_tiny_text"
                            android:layout_width="0dp"
                            android:layout_height="35dp"
                            android:layout_weight="1"
                            android:background="@drawable/button_orange_outlined_bordered"
                            android:text="@string/copy_url"
                            android:textAllCaps="false" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/qr_code_invitation"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_below="@id/referlink_action_buttons"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/bigger_padding_margin"
                        android:layout_marginBottom="@dimen/bigger_padding_margin"
                        android:src="@drawable/ic_qrcode" />


                </RelativeLayout>


            </android.support.v7.widget.CardView>

        </RelativeLayout>

    </ScrollView>


</RelativeLayout>
