<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/javis_header"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@drawable/bg_gradient">

        <TextView
            android:id="@+id/javis_title"
            style="@style/default_white_small_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/default_padding_margin"
            android:text="@string/network" />

        <RelativeLayout
            android:id="@+id/javis_total_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/javis_title"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/javis_total"
                style="@style/default_white_small_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/default_padding_margin"
                android:text="@string/total" />

            <TextView
                android:id="@+id/javis_total_amount"
                style="@style/default_white_medium_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="@dimen/default_padding_margin"
                android:layout_toEndOf="@id/javis_total" />
        </RelativeLayout>

        <TextView
            android:id="@+id/javis_total_member"
            style="@style/default_white_tiny_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/javis_total_box"

            android:layout_centerInParent="true" />
    </RelativeLayout>

    <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="300.5dp"
        android:layout_height="90dp"
        android:layout_alignBottom="@id/javis_header"
        android:layout_centerInParent="true"
        android:layout_marginBottom="-45dp"
        android:background="@drawable/bg_white_bordered"
        android:orientation="horizontal"
        app:cardCornerRadius="5dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <TextView
                    android:id="@+id/javis_total_investment_text"
                    style="@style/default_black_tiny_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="@string/javis_total_investment" />

                <TextView
                    android:id="@+id/total_investment_amount"
                    style="@style/default_orange_small_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/javis_total_investment_text"
                    android:layout_centerHorizontal="true"
                    android:ellipsize="end"
                    android:singleLine="true" />
            </RelativeLayout>


        </RelativeLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/colorGray" />

        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_gravity="end">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <TextView
                    android:id="@+id/javis_daily_profit_text"
                    style="@style/default_black_tiny_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="@string/javis_daily_profit" />

                <TextView
                    android:id="@+id/daily_profit_amount"
                    style="@style/default_orange_small_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:layout_below="@id/javis_daily_profit_text"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>


    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/javis_refresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/javis_header"
        android:layout_marginTop="45dp">

        <ListView
            android:id="@+id/list_coins"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </android.support.v4.widget.SwipeRefreshLayout>


</RelativeLayout>