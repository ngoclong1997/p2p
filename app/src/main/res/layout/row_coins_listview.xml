<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:layout_margin="@dimen/default_padding_margin">
    <ImageView
        android:layout_centerVertical="true"
        android:id="@+id/coin_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:padding="@dimen/default_padding_margin"
        />

    <RelativeLayout
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/coin_icon"
        android:id="@+id/coin_info_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_alignParentStart="true"
            android:id="@+id/coin_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/default_black_medium_text"
            />
        <TextView
            android:layout_below="@id/coin_name"
            android:id="@+id/coin_amount"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:ellipsize="middle"
            android:singleLine="true"
            style="@style/default_orange_small_text"
            />
    </RelativeLayout>
    <TextView
        style="@style/default_white_small_text"
        android:textSize="9pt"
        android:layout_marginEnd="@dimen/default_padding_margin"
        android:layout_centerVertical="true"
        android:id="@+id/coin_change_rate"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>